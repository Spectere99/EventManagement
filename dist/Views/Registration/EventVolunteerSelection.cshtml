@model EventManagement.Models.VolunteerRegistrationViewModel
@{
    ViewBag.Title = "EventVolunteerSelection";
}

<h2>Event Volunteer</h2>

<head>
    <title>Event Volunteer Registration</title>
    <script src="~/js/registration.js" type="text/javascript"></script>
</head>
<h4>Volunteer Registration</h4>

@using (Html.BeginForm("VolunteerConfirm", "Registration", FormMethod.Post))   
{   
    @Html.AntiForgeryToken()
    <p>
    <div class="row">
        <div id="eventSelection" class="col-md-12">
            <div class="row">
                <div class="col-md-12">
                    @Html.Label("Select Your Event")
                    @Html.DropDownListFor(m => m.Event, Model.EventList.Select(i => new SelectListItem { Text = i.EventName.ToString(), Value = i.EventId.ToString() }), "Select ...", new { @class = "form-control" })
                    @*@Html.DropDownListFor(m => m.Event, new SelectList(Model.EventList, "EventId", "EventName"), "Select ...", new {@class = "form-control"})*@
                </div>
            </div>
        </div> 
    </div>   
    <div id="details" class="col-md-12" style="display: none">
        <h4>Event Information</h4>
        <hr />
        @Html.Label("EventDate", " ", new { @class = "h5 text-muted", id = "EventDate" })<br />
        @Html.Label("VenueName", "Event Not Selected", new { @class = "h5 text-muted", id = "VenueName" })<br />
        @Html.Label("VenueAddress", " ", new { @class = "h5 text-muted", id = "VenueAddress" })<br />
        @Html.Label("VenueCity", " ", new { @class = "h5 text-muted", id = "VenueCity" }), @Html.Label("VenueState", " ", new { @class = "h5 text-muted", id = "VenueState" }) @Html.Label("VenueZip", " ", new { @class = "h5 text-muted", id = "VenueZip" })
        <hr />
        <h4>Volunteer Days</h4>
        <div class="form-group">
            <div class="checkbox">
                <label class="btn btn-default">
                    @Html.CheckBoxFor(model => model.MondayVolunteer)
                    Monday
                </label>
            </div>
        </div>
                    
        <div class="form-group">
            <div class="checkbox">
                <label class="btn btn-default">
                    @Html.CheckBoxFor(model => model.TuesdayVolunteer)
                    Tuesday
                </label>
            </div>
        </div>
        <div class="form-group">
            <div class="checkbox">
                <label class="btn btn-default">
                    @Html.CheckBoxFor(model => model.WednesdayVolunteer)
                    Wednesday
                </label>
            </div>
        </div>
        <div class="form-group">
            <div class="checkbox">
                <label class="btn btn-default">
                    @Html.CheckBoxFor(model => model.ThursdayVolunteer)
                    Thursday
                </label>
            </div>
        </div>
        <div class="form-group">
            <div class="checkbox">
                <label class="btn btn-default">
                    @Html.CheckBoxFor(model => model.FridayVolunteer)
                    Friday
                </label>
            </div>
        </div>
        @*<div class="form-group">
        <div class="checkbox">
            <label class="btn btn-default">
                @Html.CheckBoxFor(model => model.SaturdayVolunteer)
                Saturday
            </label>
        </div>
    </div>
    <div class="form-group">
        <div class="checkbox">
            <label class="btn btn-default">
                @Html.CheckBoxFor(model => model.SundayVolunteer)
                Sunday
            </label>
        </div>
    </div>*@
        @*<div class="row">
                <div class="col-md-8">
                    @Html.LabelFor(model => model.VolunteerDays, new {@class = "col-md-8 control-label "})
                    @Html.TextBoxFor(model => model.VolunteerDays, new {@class = "form-control"})
                    @Html.ValidationMessageFor(model => model.VolunteerDays, "", new {@class = "text-danger"})
                </div>
            </div>*@
        <br/>
        <div class="row">
            <div class="col-md-12">
                <input type="submit" value="Volunteer for Selected Event" class="btn btn-primary"/>
            </div>
        </div>
    </div>
 </p>
}
