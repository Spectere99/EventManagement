@model EventManagement.Models.RegistrationViewModel
@{
    ViewBag.Title = "Event Selection";
}

<h2>Event Registration</h2>

<head>
    <title>@ViewBag.Title</title>
    <script src="~/js/registration.js" type="text/javascript"></script>
</head>
<h4>Select Your Event</h4>
@using (Html.BeginForm("RegistrantConfirm", "Registration"))
{
    <p>
        <div class="row">
            <div id="eventSelection" class="col-md-8">
                @Html.DropDownListFor(m => m.EventList, new SelectList(Model.EventList, "EventId", "EventName"), "Select ...", new { @class = "form-control" })  @*onchange = "GetVenueDetails(this.value);",*@
                <div id="details" class="col-md-10" style="display: none">
                    <h3>Event Information</h3>
                    <hr/>
                    @Html.Label("EventDate", " ", new {@class = "h4 text-muted", id = "EventDate"})<br/>
                    @Html.Label("VenueName", "Event Not Selected", new {@class = "h4 text-muted", id = "VenueName"})<br/>
                    @Html.Label("VenueAddress", " ", new {@class = "h4 text-muted", id = "VenueAddress"})<br/>
                    @Html.Label("VenueCity", " ", new {@class = "h4 text-muted", id = "VenueCity"}), @Html.Label("VenueState", " ", new { @class = "h4 text-muted", id = "VenueState" }) @Html.Label("VenueZip", " ", new { @class = "h4 text-muted", id = "VenueZip" })
                    <hr/>
                    <div class="col-md-10">
                        <input type="submit" value="Register for Selected Event" class="btn btn-default"/>
                    </div>
                </div>
            </div>
            
         </div>
        <div class="row">

        </div>
        <div class="form-group">
            
        </div>
    </p>


}