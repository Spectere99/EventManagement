@using System.Globalization
@model EventManagement.Models.ReservationViewModel

@{
    ViewBag.Title = "WaitingListConfirm";
}
<head>
    <title>Waiting List Confirmation</title>
    <script src="~/Scripts/jquery-1.10.2.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery-1.10.2.min.js" type="text/javascript"></script>
    <script src="~/js/registration.js" type="text/javascript"></script>
    
</head>
<h2>Waiting List Confirmation</h2>


    <div class="form-horizontal">
    
    @if (Model != null)
    {
        <h4>Waiting List Notification</h4>
        <hr />
        <div class="panel-default">
            You have been placed on a waiting list because there was not enough leader volunteers from your 
            unit to satisfy the required staffing needs.  Please contact your Unit leader and have them volunteer
            
            Day Camp Policy states that for every person that volunteers for 5 days will allow for 5 spots for 
            day camp.
            
            Your waiting list confirmation will be sent via email to @Model.Person.ContactInfo.Email
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                @Html.ActionLink("Back to Home Page", "Index", "Home");
            </div>
        </div>
    }
    else
    {
        <h4>Error</h4>
        <hr />
        <div class="panel-default">
            Please select a valid Event
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Next" class="btn btn-default" />
            </div>
        </div>
    }

</div>

